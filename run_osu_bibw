#!/bin/bash
# Basic script that calls pt2pt/osu_latency
#SBATCH --time=0:05:00
#SBATCH --nodes=2
#SBATCH --tasks-per-node=1
#SBATCH --exclusive
#SBATCH -o /gpfs/data/ccvstaff/osu-benchmarks/%j.out

# Environment
module load mpi osu-mpi/5.6.2_mvapich2-2.3a_gcc python/3.6.6
bench_type='bibw'

# Store CPU Family Name and Node Numbers
nodeinfo=`srun --mpi=pmi2 sh -c "(hostname -s && cat /sys/devices/cpu/caps/pmu_name) | sed -z 's/\s/,/g'" | sed 's/.$//'`
ibinfo=`srun --mpi=pmi2 sh -c "(ibstat | grep 'CA type')" | awk '{print $3","}'`
ibinfo=`echo $ibinfo | sed -z 's/\s//g' | sed -z 's/.$//'`

# Perform pt2pt latency test
test_results=`srun --mpi=pmi2 osu_bibw`
data_point=`awk '/2097152/ {print $2}' <<< "$test_results"`

# Extract one line results to store in the data file
one_line_results=`date +"%D,%T" | sed -z 's/.$//'`","$SLURM_JOB_ID","$nodeinfo","$ibinfo","$bench_type","$data_point
echo $one_line_results >> /gpfs/data/ccvstaff/osu-benchmarks/test_data.temp

# Get script location (https://stackoverflow.com/questions/59895/how-to-get-the-source-directory-of-a-bash-script-from-within-the-script-itself)
#DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" >/dev/null 2>&1 && pwd )"
DIR='/users/mcho4/osu-benchmarks'


# Toggle python script to push results to SQL db
source /gpfs/runtime/opt/osu-mpi/5.6.2_mvapich2-2.3a_gcc/osu_env/bin/activate
python $DIR/sql_connect.py


